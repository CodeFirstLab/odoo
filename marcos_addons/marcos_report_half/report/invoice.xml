<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <template id="header_reports" inherit_id="report.external_layout_header" name="header-report">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                    <div class="row" data-pg-collapsed="data-pg-collapsed">
                        <table class="pg-empty-placeholder table table-condensed" data-pg-collapsed="data-pg-collapsed">
                            <style type="text/css">
                                .table {
                                    margin-bottom: 5px;
                                }
                                .no-borders-pading
                                {
                                    border: none !important;
                                    padding: 0 !important;
                                    border-left: none !important;
                                    border-right: none !important;
                                    border-top: none !important;
                                    border-bottom: none !important;
                                    font-size: 12px
                                }

                                .overline
                                {
                                    text-decoration: underline;
                                    font-weight: bold;
                                }

                            </style>
                            <tbody>
                                <tr style="display: table-row;">
                                    <td class="no-borders-pading" style="display: table-cell;">
                                        <h4 class="overline" style="display: block;">PINTURAS Y ACCESORIOS DEL HOGAR SRL</h4>
                                    </td>
                                    <td class="no-borders-pading text-left" style="display: table-cell;">Paginas.:</td>
                                    <td class="no-borders-pading text-left" style="display: table-cell;">1 de 1</td>
                                </tr>
                                <tr style="display: table-row;">
                                    <td class="no-borders-pading" style="display: table-cell;">San Vicente de Paul 230 Alma Rosa II Santo Domingo</td>
                                    <td class="no-borders-pading text-left" style="display: table-cell;">Fecha.:</td>
                                    <td class="no-borders-pading text-left" style="display: table-cell;">15/05/2015</td>
                                </tr>
                                <tr style="display: table-row;">
                                    <td class="no-borders-pading" style="display: table-cell;"><strong>Tels.: 809-597-2221 Fax.: 809-345-2342 RNC.:101733934</strong></td>
                                    <td class="no-borders-pading text-left" style="display: table-cell;">Hora.:</td>
                                    <td class="no-borders-pading" style="display: table-cell;">13:13:13</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                </div>
            </xpath>
        </template>

        <template id="sale_reports" inherit_id="sale.report_saleorder_document" name="sale_report">
            <xpath expr="//div[@class='page']" position="replace">
                <div class="page">
                    <div class="row" data-pg-collapsed="data-pg-collapsed">
                            <table class="pg-empty-placeholder table table-condensed">
                                <tbody>
                                    <tr style="display: table-row;">
                                        <td class="no-borders-pading text-left" style="display: table-cell;">Cliente.:</td>
                                        <td class="no-borders-pading text-left" style="display: table-cell;">Eneldo Serrata</td>
                                        <td class="no-borders-pading text-right" style="display: table-cell;">Numero.:</td>
                                        <td class="text-right no-borders-pading">SO0001</td>
                                    </tr>
                                    <tr style="display: table-row;">
                                        <td class="no-borders-pading text-left" style="display: table-cell;">Direccion.:</td>
                                        <td class="no-borders-pading text-left" style="display: table-cell;">Av Romulo betancourt 1804</td>
                                        <td class="no-borders-pading text-right" style="display: table-cell;">Fecha.:</td>
                                        <td class="text-right no-borders-pading">01/01/01</td>
                                    </tr>
                                    <tr style="display: table-row;">
                                        <td class="no-borders-pading text-left" style="display: table-cell;">Telefonos.:</td>
                                        <td class="no-borders-pading text-left" style="display: table-cell;">809 224 9879 597 2221</td>
                                        <td class="no-borders-pading text-right" style="display: table-cell;">Condicion.:</td>
                                        <td class="text-right no-borders-pading">Credito</td>
                                    </tr>
                                    <tr>
                                        <td class="text-left no-borders-pading">RNC.:</td>
                                        <td class="no-borders-pading">00111616876</td>
                                        <td class="text-right no-borders-pading" style="display: table-cell;">Vendedor.:</td>
                                        <td class="text-right no-borders-pading">Juan Eramos</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    <div class="row text-center" data-pg-collapsed="data-pg-collapsed">
                        <h4 style="display: block;">COTIZACION</h4>
                    </div>

                    <div class="row">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Articulo</th>
                                    <th>Ref</th>
                                    <th>Descripcion del articulo</th>
                                    <th class="text-right">Cantidad</th>
                                    <th class="text-right">Precio</th>
                                    <th class="text-right">Desc %</th>
                                    <th class="text-right">Total</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr t-foreach="o.order_line" t-as="l">
                                    <td class="no-borders-pading">568</td>
                                    <td class="no-borders-pading">Mark</td>
                                    <td class="no-borders-pading"><span t-field="l.name"/></td>
                                    <td class="text-right no-borders-pading" style="display: table-cell;"><span t-field="l.product_uom_qty"/></td>
                                    <td class="text-right no-borders-pading" style="display: table-cell;"><span t-field="l.price_unit"/></td>
                                    <td class="no-borders-pading text-right"><span t-field="l.discount"/></td>
                                    <td class="no-borders-pading text-right" style="display: table-cell;">
                                        <span t-field="l.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <style type="text/css">
                                    .table {
                                        margin-bottom: 5px;
                                    }
                                    .no-borders-pading
                                    {
                                        border: none !important;
                                        padding: 0 !important;
                                        border-left: none !important;
                                        border-right: none !important;
                                        border-top: none !important;
                                        border-bottom: none !important;
                                        font-size: 12px
                                    }

                                    .overline
                                    {
                                        text-decoration: underline;
                                        font-weight: bold;
                                    }

                                </style>
                                <tr class="border-black">
                                    <td><strong>Sub total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Itbis</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.pricelist_id.currency_id&quot;}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                </div>
            </xpath>
        </template>

        <report
                id="marcos_report_half_invoice_report"
                name="marcos_report_half.invoice_template"
                model="account.invoice"
                string="Factura media pagina"
                report_type="qweb-pdf"
                file="invoice_report"
                />


    </data>
</openerp>